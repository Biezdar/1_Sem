#include <stdio.h>
#include <stdlib.h>

enum naped {BENZYNA, DIESEL, ELEKTRYCZNY, HYBRYDOWY};
enum kolor {CZARNY, BIALY, CZERWONY};

struct baza
{
    char marka[30];
    unsigned int cena;
    //string terminarz_przegladow;
};

struct pojazd_osobowy
{
    struct baza baza;
    enum naped naped;
    unsigned int liczba_drzwi;
    enum kolor kolor;
};

struct pojazd_ciezarowy
{
    struct baza baza;
    unsigned int ladownosc;
    unsigned liczba_osi;
    unsigned int dlugosc;
};

struct pojazd_autobus
{
    struct baza baza;
    unsigned int liczba_miejsc_siedzacych;
    unsigned int dlugosc;
};

union pojazd
{
    struct pojazd_osobowy osobowy;
    struct pojazd_ciezarowy ciezarowy;
    struct pojazd_autobus autobus;
};

int main()
{
    struct pojazd_osobowy moj;
    moj.baza.marka="honda"
    moj.baza.cena=1000;
    moj.liczba_drzwi=5;
    moj.naped=BENZYNA;
    moj.kolor=CZARNY;

    printf("%d", moj.baza.cena);
    
    return 0;
}
